import sys
import re
input = sys.stdin.readline

def get_lol_cnt(data):
    if re.search(p0, data):
        return 0 
    if re.search(p1, data):
        return 1
    if re.search(p2, data):
        return 2
    else:
        return 3

T = int(input())
p0 = re.compile('lol')
p1 = re.compile('lo|ol|l.?l')
p2 = re.compile('l|o')
for _ in range(T):
    print(get_lol_cnt(input()))
